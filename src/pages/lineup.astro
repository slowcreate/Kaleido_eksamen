---
import MainLayout from '../layouts/MainLayout.astro';
import LineUp from '../components/Lineup.astro';
import Countdown from '../components/Countingdown.astro';
import BlueBG from '../components/BlueBG.astro';
import LineUpRight from '../components/LineupRight.astro';
import Button from '../components/Button.astro';

---

<MainLayout>
        <article>
            <section class="flex justify-center">
                <h1>Lineup</h1>
                <h2 class="mt-m md:mt-xl lg:mt-2xl mb-ml">2025</h2>
            </section>
             <BlueBG> 
                <section class="max-w-[1212px] mx-auto">
                <div class="ml-m md:ml-xl">
                    <Button label="Timetable"/>
                </div> 
                <div class="flex flex-col justify-self-end text-end md:mt-ml md:mb-s mb:pt-3xl">
                    <div class="mr-m md:mr-xl">
                    <h2 class="text-primary-50">20 june</h2>
                    <h3 class="text-primary-50">Friday</h3>
                    </div>
                    <LineUpRight date="friday" />    
                </div>
                <div class="md:mt-ml md:mb-5xl py-xl">
                    <div class="ml-m md:ml-xl">
                    <h2 class="text-primary-50">21 june</h2>
                    <h3 class="text-primary-50">Saturday</h3>
                    </div>
                    <LineUp date="saturday" />    
                </div> 
            </section>
                </BlueBG>
           
            <Countdown />
        </article>

</MainLayout>
