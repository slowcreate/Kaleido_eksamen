---
import Button from '../components/Button.astro';
import BlueBG from './BlueBG.astro';
import { Image } from 'astro:assets';
import SoMe from './SoMe.astro';
import logo from "../assets/logo.svg";
---
    <div x-data="{ showmenu: false }" class="fixed top-0 left-0 right-0 z-50 p-3 lg:p-4 bg-accent-950 lg:bg-accent-950/50">
    <div id="navbar" class="flex items-center justify-between py-xxs">
        <div id="logo" class="w-1/3 md:w-1/4 lg:w-1/6">
            <a href="/"><Image src={logo} alt="" class="w-full h-auto" /></a>
        </div>
                <nav id="desktopmenu" class="hidden lg:block mx-10 -ml-10">
                    <ul class="flex flex-row gap-10">
                        <li><a href="/tickets" class="transition hover:text-primary-500"><h6>Tickets</h6></a></li>
                        <li><a href="/lineup" class="transition hover:text-primary-500"><h6>Lineup</h6></a></li>
                        <li><a href="/volunteer" class="transition hover:text-primary-500"><h6>Volunteer</h6></a></li>
                        
                        <!-- Desktop dropdown -->
                        <li x-data="{ open: false }" class="relative">
                            <button 
                                @mouseenter="open = true" 
                                class="transition hover:text-primary-500"
                            >
                                <h6 class="">Events</h6>
                            </button>
                            <ul 
                                x-show="open" 
                                @mouseenter="open = true" 
                                @mouseleave="open = false"
                                class="absolute top-full -left-8 bg-accent-950 lg:bg-accent-950/50 px-8 rounded shadow-lg"
                            >
                                <li><a href="https://www.facebook.com/kaleidofest" target="_blank" class="block hover:text-primary-500"><h6>Facebook Event</h6></a></li>
                                <li><a href="https://ra.co/events/1956413" class="block hover:text-primary-500"><h6>Resident Advisor Event</h6></a></li>
                            </ul>
                        </li>
                        <li><a href="about" class="transition hover:text-primary-500 mt-xxs"><h6>About us</h6></a></li>
                    </ul>
                </nav> 

                <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 23 23" stroke-width="1.5" stroke="var(--color-primary-500)" class="w-8 h-8">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div> 
        <!-- Mobilmenu med lg:hidden -->
        <nav id="mobilmenu" class="flex flex-col content-center items-center pt-4 lg:hidden"
            x-show="showmenu"
            x-transition 
            x-on:click.outside="showmenu = false"
        >
            <ul>
                <li class="text-center py-2"><a href="/tickets" class="transition hover:text-primary-500"><h6 class="">Tickets</h6></a></li>
                <li class="text-center py-2"><a href="/lineup" class="transition hover:text-primary-500"><h6 class="">Lineup</h6></a></li>
                <li class="text-center py-2"><a href="/volunteer" class="transition hover:text-primary-500"><h6 class="">Volunteer</h6></a></li>
                
                <!-- Mobil dropdown -->
                <li x-data="{ open: false }" class="text-center py-2">
                    <button @click="open = !open" class=" hover:text-primary-500">
                        <h6>Events</h6>
                    </button>
                    <ul x-show="open" class="mt-2 space-y-1">
                        <li><a href="https://www.facebook.com/kaleidofest" target="_blank" class="block  hover:text-primary-500"><h6>Facebook Event</h6></a></li>
                        <li><a href="https://ra.co/events/1956413" class="block  hover:text-primary-500"><h6>Resident Advisor Event</h6></a></li>
                    </ul>
                </li>

                <li class="text-center py-2"><a href="/about" class="transition hover:text-primary-500"><h6 class="">About us</h6></a></li>  
            </ul>
            <SoMe></SoMe>
        </nav>
    </div>
    <div class="pt-24"></div>

