<script type="module">
  document.addEventListener("DOMContentLoaded", () => {
    const targetDate = new Date("2025-06-20T14:00:00Z").getTime(); // ‚Üê FLYTTET HERIND
    const countdown = document.querySelector('#countdown');
    const spans = countdown?.querySelectorAll('[data-type]');

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = targetDate - now;

      if (distance <= 0) {
        spans.forEach(span => {
          span.textContent = "0";
          span.style.setProperty('--value', 0);
          span.setAttribute('aria-label', "0");
        });
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance / (1000 * 60 * 60)) % 24);
      const minutes = Math.floor((distance / (1000 * 60)) % 60);
      const seconds = Math.floor((distance / 1000) % 60);

      const values = { days, hours, minutes, seconds };

      spans.forEach(span => {
        const type = span.getAttribute('data-type');
        if (type && values[type] !== undefined) {
          const value = values[type];
          span.style.setProperty('--value', value);
          span.setAttribute('aria-label', String(value));
          span.textContent = value;
        }
      });
    }

    setInterval(updateCountdown, 1000);
    updateCountdown();
  });
</script>


<div class="text-center my-6xl">
  <h2 class="text-primary-50">We <span class="uppercase text-primary-50 text-4xl md:text-6xl lg:text-7xl">can't wait</span> to see you</h2>
  <div id="countdown" class="grid grid-flow-col gap-5 text-center auto-cols-max justify-center">
