<script>
  document.addEventListener('DOMContentLoaded', () => {
    const countdown = document.getElementById('countdown');
    const target = new Date('2025-06-20T14:00:00Z');

    function updateCountdown() {
      const now = new Date();
      const diff = target.getTime() - now.getTime();

      const selectors = ['days', 'hours', 'minutes', 'seconds'];

      if (diff <= 0) {
        selectors.forEach(type => {
          const el = document.querySelector(`[data-type="${type}"]`);
          if (el) el.textContent = '0';
        });
        return;
      }

      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
      const minutes = Math.floor((diff / (1000 * 60)) % 60);
      const seconds = Math.floor((diff / 1000) % 60);

      const values = { days, hours, minutes, seconds };

      for (const [type, value] of Object.entries(values)) {
        const el = document.querySelector(`[data-type="${type}"]`);
        if (el) el.textContent = String(value); // ðŸ’¡ konvertering til string
      }
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);
  });
</script>


<div class="text-center my-6xl">
  <h2 class="text-primary-50">We <span class="uppercase text-primary-50 text-4xl md:text-6xl lg:text-7xl">can't wait</span> to see you</h2>

  <div id="countdown" class="grid grid-flow-col gap-5 text-center auto-cols-max justify-center">
    <div class="flex flex-col p-8 mt-m bg-secondary-500 rounded-2xl text-primary-50 unbounded w-4xl">
      <span class="bronatte text-7xl text-primary-50" data-type="days">0</span>
      days
    </div>
    <div class="flex flex-col p-8 mt-m bg-secondary-500 rounded-2xl text-primary-50 unbounded w-4xl">
      <span class="bronatte text-7xl text-primary-50" data-type="hours">0</span>
      hours
    </div>
    <div class="flex flex-col p-8 mt-m bg-secondary-500 rounded-2xl text-primary-50 unbounded w-4xl">
      <span class="bronatte text-7xl text-primary-50" data-type="minutes">0</span>
      min
    </div>
    <div class="flex flex-col p-8 mt-m bg-secondary-500 rounded-2xl text-primary-50 unbounded w-4xl">
      <span class="bronatte text-7xl text-primary-50" data-type="seconds">0</span>
      sec
    </div>
  </div>
</div>
